{
	"type": "minecraft:confirmation",
	"title": "Notification Options",
	"external_title": "Notifcation options",
	"inputs": [
		{
			"type": "minecraft:boolean",
			"key": "notify",
			"label": "Notify chunk loading",
			"initial": true,
			"on_true": "1",
			"on_false": "0"
		}
	],
	"can_close_with_escape": true,
	"after_action": "close",
	"yes": {
		"label": "Confirm",
		"action": {
			"type": "minecraft:dynamic/run_command",
			"template": "/scoreboard players set #lodestone_teleport lodestone_teleport.c.notify_chunkload $(notify)"
		}
	},
	"no": {
		"label": "Back"
	}
}